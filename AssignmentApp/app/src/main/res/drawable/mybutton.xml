<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#271103" />
            <gradient android:angle="-90" android:startColor="#81390B" android:endColor="#fe9856"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#371B09" />
            <solid android:color="#2B1507"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fe9856" />
            <gradient android:angle="-90" android:startColor="#ECBEA1" android:endColor="#EC7528" />
        </shape>
    </item>
</selector>